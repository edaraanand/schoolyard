<div class= 'formcontainer' >
   
  <table>
      <% form_for(@calendar, :action => url(:calendar)) do %>
      
           <tr>
                <td><%= text_control  :title,  :label => "Title" %></td>
           </tr>
	   <tr>
	        <td><%= text_area_control  :description,  :label => "Description",  :rows => "10", :cols => "25" %></td>
	   </tr>
	   <tr>
                <td><%= text_control  :location,  :label => "Location" %></td>
           </tr>
	   <tr>
	       <td><%= text_control :start_time, :label => "Start Time" %></td>
	   </tr>
	   <tr>
	       <td><%= text_control :end_time, :label => "End Time" %></td>
	   </tr>
	   <tr>
              <td><%= submit_button "Save" %></br>  <%= link_to "Cancel", url(:calendar) %></td>
           </tr> 
       <% end %>
  </table>
</div>
