<div class= 'formcontainer' >
   
    <%= form_for(@calendar, :action => url(:calendar)) do %>
    
       <table>
           <tr>
                <td><%= text_field :title,  :label => "Title" %></td>
           </tr>
	   <tr>
	        <td><%= text_area  :description,  :label => "Description",  :rows => "10", :cols => "25" %></td>
	   </tr>
	   <tr>
                <td><%= text_field  :location,  :label => "Location" %></td>
           </tr>
	   <tr>
	       <td><%= text_field :start_time, :label => "Start Time" %></td>
	   </tr>
	   <tr>
	       <td><%= text_field :end_time, :label => "End Time" %></td>
	   </tr>
	   <tr>
              <td><%= submit "Save" %></br> Or <%= link_to "Cancel", url(:calendar) %></td>
           </tr> 
       </table>
	
    <% end =%>
  
</div>
