<div class ='formcontainer'>
     
    <p><b> Announcements > Add New </b></p>
    <% form_for :announcement, :action => url(:announcement), :id => 'announcement' do %>
	<table>
              <tr>
                   <td><%= text_control  :title,  :label => "Title" %></td>
              </tr>
	      <tr>
	          <td><%= text_area_control  :content,  :label => "Description", :rows => "10", :cols => "50" %></td>
	      </tr>
	      <tr>
	          <td><%= text_control  :expiration,  :label => "Expiration" %></td>
	      </tr>
	  
	      <tr>
                 <td><%= submit_button "Submit for Approval" %></br> Or <%= link_to "Cancel", url(:announcement) %></td>
              </tr>
	 </table>
      <div class = 'submit'><input type = 'button' value = 'Preview' onclick="preview();return false;"  /></div>
   <% end %>
	  
    
</div>

<script type= "text/javascript">

 function preview()
 {
   var s = $('announcement').serialize();
   alert(s);
   window.open('preview/-/?' + s);
 }

</script>

