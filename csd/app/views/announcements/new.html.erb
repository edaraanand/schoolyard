<div class ='formcontainer'>
     
    <p><b> Announcements > Add New </b></p>

    <%= form_for :announcement, :action => url(:announcement), :id => 'announcement' do %>
	
         <%= partial 'form' %>          

         <div class = 'submit'>
               <input type = 'button' value = 'Preview' onclick="preview();return false;" />
         </div>

     <% end =%>
	   
    
</div>

<script type= "text/javascript">

 function preview()
 {
   var s = $('announcement').serialize();
   window.open('preview/-/?' + s);
 }

</script>

