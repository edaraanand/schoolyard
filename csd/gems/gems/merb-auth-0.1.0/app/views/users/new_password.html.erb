


<%= form_for :user, :action => url(:new_password_create), :method => :put do %>

    <p>Choose your Password</p>
      
    <%= password_field :password, :label => "Password" %>
    <p><%= flash[:error1] %></p>
    <%= password_field :password_confirmation, :label => "Password Confirmation" %>
    <%= submit "Save" %>
    <p><%= flash[:error] %></p>

<% end =%>
