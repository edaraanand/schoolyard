
<div>
  <div class="form_description">
  	<h2>Member sign in</h2>
  </div>

  <form action="<%= url(:login) %>" method="post">
    <% if request.post? -%>
    <div class="error">
      <h2>Incorrect Email and password</h2>
    </div>
    <% end -%>
    
    <p><label for="email"> Email</label>
    <input type="text" name="email" value="<%= params[:email] %>"/></p>

    <p><label for="password">Password</label>
    <input type="password" name="password"/></p>
   
    <p><input type="checkbox" name='remember_me' id='remember_me' value="1"/>
      <label id='remember_me_lb' for="remember_me">Keep me signed in</label></p>
    
    <p><input type="submit" value="Sign in"/> <span style="margin-left:20px"><%= link_to "forgot_password?", url(:forgot_password) %> </span></p>
  </form>
  
  
</div>
