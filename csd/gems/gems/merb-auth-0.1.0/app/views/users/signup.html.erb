
<div>
  <div class="form_description">
  	<h2>Sign up here (it's absolutely free)</h2>
  </div>

  <%= form_for @user, :action => url(:signup) do %>
   

    <p>
      <%= text_field :name, :label => "Name" %>
    </p>
    <p>
      <%= text_field :username, :label => "Username" %>
    </p>
    <p>
      <%= text_field :email, :label => "E-mail" %>
    </p>
    <p>
      
      <%= password_field :password, :label => "Password" %>
    </p>
    <p>
       <%= password_field :password_confirmation, :label => "Password Confirmation" %>  
    </p>
    <p>
      <%= submit "Sign up" %> <span style="margin-left:20px">Already a member?  <a href="<%= url(:login) %>">Sign in here</a></span>
    </p>
  <% end =%>
</div>
