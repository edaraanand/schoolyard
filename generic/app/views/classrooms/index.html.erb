<h2 class="current-page">Classrooms &nbsp;&nbsp;&nbsp; <%= link_to "Add New", resource(:classrooms, :new) %></h2>



<% if @classrooms.empty? %>
  <p>There are no classrooms created yet.  <%= link_to "Add New", resource(:classrooms, :new) %></p>

<%else%>
<div class="data-block short-block">
  <% for classroom in @classrooms %>
      <div class="data">
   
           <ul>
               <li><h3><%= classroom.class_name %></h3></li>
                  <% s = classroom.class_peoples.delete_if{ |x| x.team_id != nil } %>
                  <% s.each do |f| %>
                     <li><%= f.role.titleize %> : <%= f.person.name %></li>
                  <% end %>
           </ul>
      </div>
       <%= link_to "Edit",  resource(classroom, :edit), :class=> "edit-btn" %>
       <%#= link_to "Delete", resource(classroom, :delete), :class=> "delete-btn" %>
       <a rel="facebox" href="#<%= classroom.id %>" class="delete-btn" > Delete </a>
       
         <div id="<%= classroom.id %>" style="display:none;">
           <h4> Are you sure u want to delete the classroom </h4>
           <div class="save-cancel">
              <%= link_to "Delete", resource(classroom, :delete),  :class => "delete-btn" %> Or <%= link_to "Cancel", resource(:classrooms), :class => "cancel" %>
           </div>
       </div>
       <div class="clear dashed separate"></div>
 
  <% end %>
       

</div>
    

<% end %>




