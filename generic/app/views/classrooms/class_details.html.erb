<%  if params[:label] == "calendars" %>
 
        <%= partial 'calendars' %>
        
<% elsif params[:label] == "homeworks" %>
      
        <%= partial 'home_works' %>        
        
<% elsif params[:label] == "announcements" %>
     
       <%= partial 'announcements' %>
       
<% elsif params[:label] == "spot_light" %>
     
        <%= partial 'spot_lights' %>      

<% else %>
      <div id="content">
        <p class="post-content">
              <% if @welcome_messages.empty? %>
                  Welcome to <%= @current_school.school_name%>'s <%=@classroom.class_name.titleize%> classroom
                  <% unless session.user.type == "Parent" %>
                      <span class="admin-links">
                        <%= link_to_right( (right = "welcome_messages"), "Add New", url(:new_welcome_message, :l => "#{@classroom.class_name.titleize}" ) ) %>
                      </span>
                  <% end %>
              <% else %>
                   <% for message in @welcome_messages %>
                       <%= message.content %>
                       <% unless session.user.type == "Parent" %>
                           <ul>
                               <%= link_to_right( (right = "welcome_messages"), "Edit Welcome Message", resource(message, :edit) ) %> &#124;
                               <%= link_to_right( (right = "welcome_messages"), "Delete Welcome Message", resource(message, :delete) ) %>
                           </ul>
                       <% end %>
                   <% end %>
              <% end %>
         </p>
               <h2 class="current-page">Announcements &amp; Updates </h2>
        
               <% if @ann.blank? %>
                     <p class="subText">There are no announcements at this time</p>
               <% else %>
                     <% for announcement in @ann %>
                          <div class="data-block short-block">
                               <div class="ddmmm">
                                   <span class="date"><%= announcement.created_at.strftime("%d") %></span>
                                   <span class="month"><%= announcement.created_at.strftime("%b") %></span>
                               </div>
                               <h3><%= link_to "#{announcement.title}", url(:home, announcement.id, :l => @classroom.id, :label => "class_ann") %></h3>
                               <% unless session.user.type == "Parent" %>
                                    <div class="admin-links">
                                         <%= link_to_right((right = "announcements"), "Edit", resource(announcement, :edit)) %> &#124;
                                         <%= link_to_right((right = "announcements"), "Delete", resource(announcement, :delete)) %>
                                    </div>
                               <% end %>
                               <p><%= snippet(announcement.content,50) %></p>
                               <% @attachment = @current_school.attachments.find(:first, :conditions => ["attachable_id =? and attachable_type =?", announcement.id, "Announcement"] ) %>
                               <% unless @attachment.nil? %>
                                <span class="attachment"><%= link_to "#{@attachment.filename}", url(:download, :id => @attachment.id) %></span>
                               <% end %>
                               <p class="separator">&nbsp;</p>
                          </div>
                     <% end %>
              <% end %>
              <% unless session.user.type == "Parent" %>
                   <div class="admin-links">
                          <ul>
                              <li <% if @selected == "announcements" %> class="on" <% end %>>
                                  <%= link_to "All Announcements", url(:class_details, :id =>  @classroom.id, :label => "announcements") %> &#124;    
                                  <%= link_to_right((right = "announcements"), "Add New Announcement", resource(:announcements, :new, :l => "#{@classroom.class_name.titleize}")) %>
                                  <% if session.user.type == "Parent" %>
                                       &#124; <%= link_to "Submit an announcement", resource(:parents, :new) %>
                                  <% end %>
                              </li>
                          </ul> 
                   </div>
              <% end %>
      </div>

       <div class="right-sidebar">
              
              <% unless @sp_light.nil? %>

                    <h3>Spotlight</h3>
                    <ul class="last">
                         <% @attachment = @current_school.attachments.find(:first, :conditions => ['attachable_type = ? and attachable_id = ?', "spot_light", @sp_light.id]) %>
                         <% unless @attachment.nil? %>  
                              <img src="/uploads/spotlights/<%= @attachment.filename %>" alt="<%= @attachment.filename %>" class="teacherPic"/>
                         <% end %>
                         <h6><%= link_to "#{@sp_light.student_name}", url(:spot_light, @sp_light.id, :label => "class_spot_light") %></h6>
                         <%= snippet(@sp_light.content, 25) %>
                         <li><%= link_to "All spotlights", url(:class_details, :id => @classroom.id, :label => "spot_light") %></li>
                    </ul>
              <% end %>
             
              <h3>Current Homework</h3>
              <ul class="last">
                  <% @h_w = @classroom.home_works.find(:all, :conditions => ['school_id = ? and due_date >= ?', @current_school.id, @date] ) %>
                  <% if @h_w.blank? %>
                       <span class="subText">There are no homework assignments due at this time</span>
                  <% else %>
                      <% for homework in @h_w %>
                        <li><%= link_to "#{homework.title}", url(:home_work, homework.id) %></li>
                      <% end %>
                  <% end %>
              </ul>
              <% unless @external_links.blank? %>
                   <h3>External Links </h3>
                   <ul class="last">
                     <% for link in @external_links %>
                       <li><%= link_to ("#{link.title}", "http://#{link.url}", {'target' => '_blank'}) %></li>
                     <% end %>
                   </ul>
              <% end %>
                          
         </div>
</div>                                                                                                                                         
<% end %>   




<script type= "text/javascript">

  jQuery(document).ready(function($)
     {
       $('a[rel*=facebox]').facebox()
       
     } 
 ) 

</script>
