<h2 class="current-page">Welcome Messages  &nbsp;&nbsp;&nbsp; <%= link_to "Add New", url(:new_welcome_message) %></h2>


<div class="fullpage announcemt">

<%= form_for(@welcome_message, :action => url(:controller => 'welcome_messages', :action => 'index'), :id => 'welcome_message') do %>
         <% if params[:label] ==  "home_messages" %>
             <%= select :name => "access_name", :collection => @classrooms, :selected => "Home Page", :label => "View  " %>
         <% elsif params[:access_name].nil? %>
             <%= select :name => "access_name", :collection => @classrooms, :label => "View  " %>
         <% else %>
             <%= select :name => "access_name", :selected => params[:access_name], :collection => @classrooms, :label => "View  " %>
         <% end %>
             <%= submit "    Go    " %>
<% end =%>


       <% if  @welcome_messages.blank?  %>
             <p>There are not welcome messages created yet. <%= link_to "Add New", url(:new_welcome_message) %>
       <% else %>
               <% for mess in @welcome_messages %>
                     <div class="data-block long-block">
                           <% if mess.created_at.nil? %>
	                              <div class="ddmmm-x">
	                            </div>
                          <% else %>
                                <div class="ddmmm">
	                                  <span class="date"><%= mess.created_at.strftime("%d") %></span>
	                                  <span class="month"><%= mess.created_at.strftime("%b") %></span>
	                              </div>
	                         <% end %>
	                         <p> Welcome Message for: <b><%= mess.access_name %></b></p
                           <p class="post-content"><%= san_content(mess.content) %></p>
                           <%= link_to "Edit", resource(mess, :edit), :class=>"edit-btn" %>
                           <%= link_to "Delete", resource(mess, :delete), :class=>"delete-btn" %>
                           <p class="separator clear">&nbsp;</p>
                           <br class="clear"/>
                      </div>
               <% end %>
       <% end %>
   
</div> 


	 
