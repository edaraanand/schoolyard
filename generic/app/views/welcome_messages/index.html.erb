
<div class="formcontainer">

    <%= form_for(@welcome_message, :action => url(:controller => 'welcome_messages', :action => 'index'), :id => 'welcome_message') do %>
         <table>
                <tr>
                    <td> <h3>Welcome Messages</h3></td> </br> 
	            <td> <%= link_to "Add New", resource(:welcome_messages, :new) %></td>
                </tr> 
		<tr>
		   <td><%= select :name => "access_name", :collection => @classrooms %></td>
		   <td><%= submit ">>" %></td>
		</tr>
	 </table>	
     <% end =%>	
	 
    
	 <table> 
	       <% for message in @welcome_messages %>
	     
	           <tr>
		        <td><%= message.created_at.strftime("%B-%d") %></td>
		   </tr>
		   <tr>
                        <td><%= message.content %></td>
			<td><%= link_to "Edit", resource(message, :edit) %></td>
                        <td><%= link_to "Delete", resource(message, :delete) %></td>
                   </tr>
	       <% end %>
            
	 </table>
	
</div> 

	 
	 