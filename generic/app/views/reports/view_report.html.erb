<h2 class="current-page">
     Grades/Reports > <%= @report.subject_name %> 
</h2>


   <table id="mytable" class="reports">
         <thead>
                <th class="student">Student</th>
                <% @categories.each do |c| %>
                   <% @assignments = c.assignments %>
                   <% @assignments.each do |a| %>
                       <th><%= a.name %></th>
                   <% end %>
                <% end %>
         </thead>
         <tbody>    
             
        <% @students.each do |st| %>
         
              <tr>
                   <td><%= st.name %></td>
                   <% @categories.each do |f| %>
                       <% assignments = f.assignments  %>
                       <% assignments.each do |a| %>
                           <% grades = a.grades %>
                           <% if grades.empty? %>
                               <td></td>
                           <% else %>
                               <% grades.each do |g| %>
                                   <td><%= g.grade %></td>
                                   <% grades.delete_if {|x| x == g } %>
                               <% end %>
                           <% end %>
                       <% end %>
                   <% end %>           
              </tr> 
      
        <% end %>
                             
                 
        </tbody>
   </table>
   
   
    <div class="page-links">
        <%= link_to "All Subjects", resource(:reports) %> |
        <%= link_to "All Assignments", url(:assignments,  :id => @report.id) %>      
    </div>
