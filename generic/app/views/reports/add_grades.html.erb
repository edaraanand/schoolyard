<h2 class="current-page">Grades/Reports > <%= @assignment.name %></h2>
<%= form_for(@assignment, :action => url(:score, :id => @assignment.id), :id => "grade" ) do %>
  <%= text_field  :date, :class => "short", :id => "assignment_date", :label => "Assignment Date" %>
  <table id="mytable">
    <thead>
      <th>Your Students</th>
      <th>Student Score (Max Points : <%= @assignment.max_point %> )</th>
    </thead>
      <% students = Student.find( :all, :joins => :studies, :conditions => ['studies.classroom_id = ?', @classroom.id] ) %>
        <% students.each do |f| %>
          <tr>
            <td><%= f.name %></td>
            <td><%= text_field :name => "assignment[score][]", :class => "short number", :max => "#{@assignment.max_point}" %></td>
          </tr>
      <% end %>
  </table>
  <div class="save-cancel">
    <%= submit "save" %> Or  <%= link_to "Cancel", url(:assignments,  :id => @report.id), :class => "cancel" %>
  </div>
<% end =%>
<script type= "text/javascript">
  $j("#assignment_date").datepicker({minDate:'today + 1'});
    //  $j("#report").validate();   
</script>
