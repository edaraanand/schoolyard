<div id="register">
<h1>Please select a password</h1>
    <div class="register-steps3"><img src="/images/register-step3.gif" alt="Step 3 of 3"/></div>
<fieldset>                  

<%= form_for (@parent, :action => url(:password_save, :id => @parent.id) ) do  %>
    
        <ul>
             <li><%= password_field :password,  :label => "Password" %></li>
             <li><%= password_field :password_confirmation,  :label => "Password Confirmation" %></li>
            <% if flash[:error1] %>
               <%= flash[:error1] %>
            <% end %>
            <% if flash[:error2] %>
               <%= flash[:error2] %>
            <% end %>
            <% if flash[:error] %>
               <%= flash[:error] %>
            <% end %>
        </ul>
        <br/>
        <hr size="1" />
                <%= submit "    Save    " %> 

<% end =%>
   
</fieldset>   
</div>