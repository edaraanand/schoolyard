<h2 class="current-page"> School Apps  > New Password </h2>

<fieldset>                  

<%= form_for (@staff, :action => url(:staff_password_save, :id => @staff.id) ) do  %>
    
        <ul>
             <li><%= password_field :password,  :label => "Password" %></li>
             <li><%= password_field :password_confirmation,  :label => "Password Confirmation" %></li>
            <% if flash[:error1] %>
               <%= flash[:error1] %>
            <% end %>
             <% if flash[:error] %>
               <%= flash[:error] %>
            <% end %>
            <% if flash[:error2] %>
               <%= flash[:error2] %>
            <% end %>
        </ul>
            <div class="save-cancel">
                <%= submit "Save" %> 
            </div>

     <% end =%>
   
</fieldset>   
