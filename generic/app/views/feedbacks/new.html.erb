<%= error_messages_for @announcement %>

<p><h4>We appreciate your feedback and will try to implement suggestions you give.</h4></p><br/>

<h2 class="current-page">Feedback </h2>

<%= form_for ( @announcement, :action => resource(:feedbacks) ) do %>
      
       <fieldset>
              <ul>
                 <li><%= text_area  :content,  :label => "Feedback", :rows => "20", :cols => "50" %></li>
              </ul>
      </fieldset>
      
      <div class="save-cancel">
          <%= submit "    Send Feedback    " %> Or <a href="javascript:history.back();" class="cancel">Cancel</a>
      </div>  
<% end =%>

