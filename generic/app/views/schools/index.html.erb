<fieldset>
  <% if @school.nil? %>
  <h3>School Profile</h3>
	<p>"Basic Settings are not specified, <%= link_to "Add Now", url(:new_school) %>"</p>
  <% else %>
  <h2 class="current-page">School Profile<%= link_to "Edit", url(:edit_school, @school), :class=> "edit-btn" %></h2>
  <dl>
    <dt>School Name</dt>
    <dd><%= @school.school_name %></dd>
  </dl>
  <h5>Contact Information For Parents</h5>
  <dl>
    <dt>Phone</dt>
    <dd><%= @school.phone %></dd>
    <dt>E-Mail</dt>
    <dd><%= @school.email %></dd>
  </dl>
  <% end %>
</fieldset>