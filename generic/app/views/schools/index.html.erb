
   <% if @school.nil? %> 
       <div id = 'pagebody' class = 'column'>
           <div class = 'formcontent'>
               <h3>School Profile</h3> </br>
	       
	     "Basic Settings are not specified, <%= link_to "Add Now", resource(:schools, :new) %>"  
	   </div>
       </div>
   <% else %>
	 <div id = 'pagebody' class = 'column'>
           <div class = 'formcontent'>
        
               <h3>School Profile</h3> </br>
	       <%= link_to "Edit", resource(@school, :edit) %>
