<h2 class="current-page">Students &gt; <span class="add-link"><%= link_to "Add New", resource(:students, :new) %></span></h2>
<% unless @students.empty? %>
  <table id="mytable">
    <thead>
      <th>Last Name</th>
      <th>First Name</th>
      <th>Email</th>
      <th>Address</th>
      <th>Phone</th>
    </thead>
    <tbody>
      <% for student in @students %>
        <tr>
          <td><%= link_to "#{student.last_name}", resource(student, :edit) %> </td>
          <td><%= student.first_name %></td>
          <% student.parents.each do |f| %>
               <td><%= f.email %></td>
               <td><%= f.address %></td>
               <td><%= f.phone %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>