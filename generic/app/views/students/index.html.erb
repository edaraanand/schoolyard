    <div class='formcontainer'>
   
      <table>
            <tr>
	        <td><h3>Students</h3> </br></td>
	        <td><%= link_to "Add New", resource(:students, :new) %></td>
	    </tr>
      </table>
      </div>
<% else %>
  
  <div class='formcontainer'>
   
      <table>
            <tr>
	        <td><h3>Students</h3> </br></td>
	        <td><%= link_to "Add New", resource(:students, :new) %></td>
	    </tr>
     	    <tr> 
	        <td<h3>Last Name </h3></td>
	        <td<h3>First Name </h3></td>
	        <td<h3>Email </h3></td>
	        <td<h3>Phone </h3></td>
	    </tr> 
	    <% for student in @students %>
   
                 <tr>
		     <td><%= link_to "#{student.last_name}", resource(student, :edit) %> </td>
                     <td><%= student.first_name %></td>
		 </tr> 
                
	    <% end %> 
	   
	    
        </table>
	 
  </div>
<% end %>