<h2 class="current-page"> My Profile > Change Password </h2>

<fieldset>                  

<%= form_for :person, :action => url(:staff_password_update), :id => @person  do  %>
    
        <ul>
             <li><%= password_field :old_password,  :label => "Old Password" %></li>
             <li><%= password_field :password,  :label => "Password" %></li>
             <li><%= password_field :password_confirmation,  :label => "Password Confirmation" %></li>
             <%= flash[:error1] %>
             <%= flash[:error2] %>
             <%= flash[:error3] %>
        </ul>
            <div class="save-cancel">
                <%= submit "Save" %> Or <%= link_to "Cancel", url(:staff_account) %>
            </div>

     <% end =%>
   
</fieldset>   
