 <h2 class="current-page">Alerts &gt; change settings</h2>

<%= form_for :alert, :action => url(:alert_update) , :id => 'alert' do %>
  <fieldset>
  <dl class="check-box-set origin">
     <% @alerts.each do |f| %>
            <% have_alert = false %>
        <% @alert_people.each do |l| 
            have_alert = (f.id == l.alert_id) 
            break if have_alert	 end %>
            
          <% if have_alert %>
               <dt>
                 <input type="checkbox" class="check" checked="true" name="alert[alert_ids][]" value="<%= f.id %>" />
               </dt>
               <dd><%= f.full_name %></dd>
          <% else %>
               <dt>
                 <input type="checkbox" class="check" name="alert[alert_ids][]" value="<%= f.id %>" />
               </dt>
                 <dd><%= f.full_name %></dd>
          <% end %>
          
     <% end %>
</dl>
    <div class="save-cancel"><%= submit "    Save    " %> Or <%= link_to "Cancel", url(:alerts), :class => "cancel" %></div>
  </fieldset>         
<% end =%>
    

