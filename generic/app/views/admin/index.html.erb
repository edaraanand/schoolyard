
<h2 class="current-page"><%= link_to "Add a New School", url(:new_admin) %></h2>
  
    <table id="mytable">
    <thead> 
         <th>School Name</th>
         <th>URL</th>
         <th>Admin Name</th>
         <th>Admin Email</th>
    </thead>
  
          <% for school in @schools %>
              <tr onclick="location.href='<%= url(:edit_admin, school.id) %>'">
                  <td><%= school.school_name %></td>
                  <td><%= school.domain %> </td>
                <% s = school.people.find(:first) %>
                   <%# s.each do |f| %>
                      <td><%= s.name %></td>
                      <td><%= s.email %></td>
                   <%# end %>
              </tr>  
          <% end %>
  </table>
