<fieldset>
      <ul>
        <li><%= text_field :school_name,  :label => "School Name", :maxlength => "75" %></li>
        <% if @subdomain != nil? %>
        <li> <label>Url</label> http:// <input type="text" maxlength="75" id="school_subdomain" name="school[subdomain]" class="short" value="<%= @subdomain %>" />.schoolyardapp.com </li>
        <% else %>
      <li> <label>Url</label> http:// <input type="text" maxlength="75" id="school_subdomain" name="school[subdomain]" class="short" />.schoolyardapp.com </li>
        <% end %>
      <h4> <p> Administrator </p></h4>
         
          <%= fields_for @person do %>  
              <li><%= text_field  :first_name, :label => "First Name", :maxlength => "75" %></li>
              <li><%= text_field  :last_name,   :label => "Last Name", :maxlength => "75" %></li>
              <li><%= text_field :email,  :label => "E-mail", :maxlength => "75" %></li>
          <% end =%> 
     </ul>
</fieldset>
<div class="save-cancel">
    <%= submit "    Save    " %> Or <%= link_to "Cancel", resource(:admin), :class => "cancel" %>
</div>