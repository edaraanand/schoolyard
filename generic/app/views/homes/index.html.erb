   <% for announcement in @announcements %>
         
                  <div class="data-block long-block">
                           <% if announcement.expiration.nil? %>
                                 <div class="ddmmm-x">
	                               </div>
                           <% else %>
                                 <div class="ddmmm">
                                      <span class="date"><%= announcement.expiration.strftime("%d") %></span>
                                      <span class="month"><%= announcement.expiration.strftime("%b") %></span>
	                               </div>
                            <% end %>
                          <h3><%= announcement.title %></h3>
                          <p class="post-content"><%= announcement.content %></p>
                          <% @attachment = Attachment.find(:first, :conditions => ['attachable_id=?', announcement.id] ) %>
                          <% unless @attachment.nil? %>
                             <p><%= link_to "#{@attachment.filename}", url(:download, :id => @attachment.id) %></p>
                          <% end %>
                  </div>
               
            <div class="hrule clear"><hr /></div>
   <% end %>
 
