<ul class='error_messages'><li class="empty-li"></li>
       <% if flash[:error] %>
          <li><%= flash[:error] %> </li>
       <% end %>
       <% if flash[:error1] %>
          <li><%= flash[:error1] %> </li>
       <% end %>
</ul>

<h2 class="current-page">From the Principal &gt; Settings</h2>


<% unless @attachment.nil? %>
<img src="uploads/principal_images/<%= @attachment.filename %>" alt="<%= @attachment.filename %>", class = "prinPic"/>
<% else %>
<img src="images/principal.png" alt="From The Principal" />
<br class="clear"/><br/><br/>
<% end %>


<%= form_for(@announcement, :action => url(:settings_update)) do %>
       <fieldset>
            <ul>
                <li><%= file_field :image,  :label => 
                  if @attachment.nil?
                    "Upload a Photograph" 
                  else
                    "Upload a different Photograph"
                  end
                    
                    
                  %></li>
            </ul>
       </fieldset>
      
            <div class="save-cancel">
                <%= submit "    Upload    " %>  Or <%= link_to "Cancel", url(:from_principals), :class => "cancel" %>
            </div>
  <% end =%>



  
