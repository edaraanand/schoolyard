<fieldset>
  <ul>
    <li><%= text_field  :title,  :label => "Title" %></li>
    <li><%= text_area  :content,  :label => "Description", :rows => "10", :cols => "50" %></li>
    <li><%= text_field  :expiration, :id => "expiration",  :label => "Expiration", :class=>"short" %></li>
  </ul>
</fieldset>
<div class="save-cancel">
  	<input type = 'button' value = 'Preview' onclick="preview();return false;" /><%= submit "Publish" %> Or <%= link_to "Cancel", url(:from_principals) %>
</div>


<script type= "text/javascript">

 function preview()
 
 {
   var s = $('announcement').serialize();
   window.open('/from_principals/preview/-/?' + s);
 }
  
  $j("#expiration").datepicker({minDate:'today'});

</script>

  
