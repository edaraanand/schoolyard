      <% if params[:l] == "all_forms" %>
           <h2 class="current-page"> All Forms </h2>
      <% elsif params[:id].nil? %>
           <h2 class="current-page"> All Forms </h2>
      <% else %> 
           <h2 class="current-page"> Forms for <%= @class.class_name.titleize %> </h2>
      <% end %>

<% if params[:l] == "all_forms" %>
     <% if @all_forms.empty? %>
         <p class="subText">There are no forms available.</p>
     <% else %>
           <table id="mytable"  cellspacing="0" cellpadding="0">
                 <thead>
                        <th>Form</th>
                        <th>for</th>
                        <th>Last Updated</th>
                 </thead>
                <tbody>
                   <% for form in @all_forms %>
                        <% @attachment = Attachment.find(:first, :conditions => ["attachable_id = ? and attachable_type = ?", form.id, "Form"] ) %>
                        <tr>
                            <td><%= link_to "#{form.title}", url(:download, :id => @attachment.id) %> </td>
                            <td><%= form.class_name %></td>
                            <td><%= form.updated_at.strftime("%b %d %Y") %></td>
                        </tr>
                   <% end %>
             </tbody>
         </table>
         <%= will_paginate (@all_forms, :inner_window => 1, :outer_window => 1, :class => 'header15', :separator => ' | ' ) %>
     <% end %> 
     
<% else %>
 
      <% if @forms.empty? %>
         <p class="subText">There are no forms available for <%= @class.class_name.titleize %>.</p>
      <% else %>
            <table id="mytable"  cellspacing="0" cellpadding="0">
                <thead>
                       <th>Form</th>
                       <th>for</th>
                       <th>Last Updated</th>
                </thead>
                 <tbody>
                       <% for form in @forms %>
                             <% @attachment = Attachment.find(:first, :conditions => ["attachable_id = ? and attachable_type = ?", form.id, "Form"] ) %>
                             <tr>
                                 <td><%= link_to "#{form.title}", url(:download, :id => @attachment.id) %> </td>
                                 <td><%= form.class_name %></td>
                                 <td><%= form.updated_at.strftime("%b %d %Y") %></td>
                             </tr>
                        <% end %>
                 </tbody>
             </table>
                <%= will_paginate (@forms, :inner_window => 1, :outer_window => 1, :class => 'header15', :separator => ' | ' ) %>
      <% end %>  

<% end %>

</div>
  
  
    <% unless session.user.type == "Parent" %>
         <div class="right-sidebar">
             <h3>Manage Forms</h3>
              <ul class="last">
                   <li <% if @selected == "forms" %> class="on" <% end %>><%= link_to_right((right = "forms"), "Manage Forms", url(:forms)  ) %></li>
              </ul>
          </div>
    <% end %>
