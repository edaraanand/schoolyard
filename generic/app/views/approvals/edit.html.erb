<%= error_messages_for @announcement %>
<h2 class="current-page">Pending Approval &gt; Edit </h2>
<%= form_for(@announcement, :action => url(:approval, @announcement), :id => 'announcement' ) do %>
 
   <fieldset>
      <ul>
    <li><label>Announcement for:</label><%= select :access_name, :collection => @classrooms %></li>
    <li><%= text_field  :title,  :label => "Title" %></li>
    <li><%= text_area  :content,  :label => "Description", :rows => "10", :cols => "50" %></li>
    <li><%= text_field  :expiration, :id => "expiration", :label => "Expiration" %></li>
  </ul>
</fieldset>
<div class="save-cancel">
	<input type = 'button' value = 'Preview' onclick="preview();return false;" />
<%= submit "Submit for Approval" %></br> Or <%= link_to "Cancel", resource(:approvals) %>
</div>

<% end =%>


<script type= "text/javascript">

   
 function preview()
 {
   var s = $('announcement').serialize();
   window.open('/approvals/preview/-/?' + s);
   
 }
 
  $j("#expiration").datepicker({minDate:'today'});
 
</script>
 
 
            


