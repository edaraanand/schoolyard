    
    <h2 class="current-page">Pending Approval </h2>
  <div class="fullpage announcemt"> 
         Announcement for : <%= @announcement.access_name %>
           <div class="data-block long-block">
             <% if @announcement.expiration.nil? %>
                   <div class="ddmmm-x">
	                 </div>
              <% else %>
                   <div class="ddmmm">
                      <span class="date"><%= @announcement.expiration.strftime("%d") %></span>
                      <span class="month"><%= @announcement.expiration.strftime("%b") %></span>
	                 </div>
              <% end %>
              <h3><%= @announcement.title %></h3> <%= link_to "Edit", url(:edit_approval, @announcement.id), :class=>"edit-btn" %>
              <p class="post-content"><%= @announcement.content %></p>
              
      <%= form_for :announcement, :action => url(:publish, :id => @announcement), :name => "approveform" do %>      
           
            <ul>
                <li>Comments <%= text_area  :name => "comments", :rows => "10", :cols => "50" %></li>
            </ul>
            
              <div class="hrule clear"><hr /></div>
                  <input type="hidden" name="approvetype" />
                  <a href="javascript:getsupport('Approve & Publish')">Approve & Publish </a> or
                  <a href="javascript:getsupport('Reject')">Reject</a> or
                  <%= link_to "Cancel", url(:approvals), :class => "cancel" %>
             </div>
      <% end =%>        
              
   </div>     
 
   
<script language="JavaScript" type="text/javascript">

   function getsupport ( selectedtype )
   {
      document.approveform.approvetype.value = selectedtype ;
      document.approveform.submit() ;
    }

</script>
   
   
