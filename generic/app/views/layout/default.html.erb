<%= partial 'layout/main' %>

    <div id="sidebar">
      <ul id="menu"><!-- Nested Lists -->
        <li>Site Settings<ul>
          <li <% if @selected == "school_profile" %> class="on" <% end %>><%= link_to "Basic Settings", url(:schools) %></li>
          <li <% if @selected == "class_rooms" %> class="on" <% end %>><%= link_to_if((right = "classes"), "Classrooms", url(:classrooms) )  %></li>
          </ul>
        </li>
        <li>Access Rights<ul>
              <li <% if @selected == "rights" %> class="on" <% end %>><%= link_to_if((right = "rights_others"), "Add/Edit Access Rights", url(:people) ) %></li>
              <% @parents = @current_school.parents.find(:all, :conditions => ["approved = ?", 2 ]) %>
              <li <% if @selected == "parent_registration" %> class="on" <% end %> class="count"><%= link_to_if((right = "parent_registration"), "Parent Registration", url(:parent_approvals) ) %><span><b><%= @parents.length %></b></span></li>
          </ul>
        </li>
        <% @announcements = @current_school.announcements.find(:all, :conditions => ["approve_announcement = ? and approved = ?", true, false ]) %>
        <% @sports_class = @current_school.classrooms.find(:first, :conditions => ['class_name = ? and activate =  ?', "Sports", true] ) %>
          <li>Content<ul>
          <li <% if @selected == "approve" %> class="on" <% end %> class="count"><%= link_to_if((right = "approve_announcement"), "Pending Approvals", url(:approvals) ) %><span><b><%= @announcements.length %></b></span></li>
          <li <% if @selected == "from_principal" %> class="on" <% end %>><%= link_to_if((right = "from_principal"), "From the Principal", url(:from_principals)) %></li>
      		<li <% if @selected == "announcements" %> class="on" <% end %>><%= link_to_if((right = "announcements"), "Announcements", url(:announcements)) %></li>
      		<li <% if @selected == "welcome_messages" %> class="on" <% end %>><%= link_to_if( (right = "welcome_messages"), "Welcome Messages", url(:welcome_messages) ) %></li>
      	  <li <% if @selected == "calendars" %> class="on" <% end %>><%= link_to_if((right = "calendar"), "Calendars", url(:calendars) )  %></li>
      		<li><%#= link_to_if((right = "spotlight"), "Spotlight", url(:spot_lights) ) %></li>
          <li <% if @selected == "home_work" %> class="on" <% end %>><%= link_to_if((right = "homework"), "Homeworks", url(:home_works) )  %></li>
      		<li><%#= link_to_if((right = "grades"), "Grades/Reports" ) %></li>
      		<li <% if @selected == "e_links" %> class="on" <% end %>><%= link_to_if((right = "external_links"), "External Links", url(:external_links) ) %></li>
          <% unless @sports_class.nil? %>
      		    <li <% if @selected == "teams" %> class="on" <% end %>><%= link_to_if((right = "teams"), "Sports Teams", url(:teams)) %></li>
          <% end %>
      		<li <% if @selected == "forms" %> class="on" <% end %>><%= link_to_if((right = "forms"), "Forms", url(:forms)  ) %></li>
      		<li><%#= link_to "Advertising" %></li>
          </ul>                                                                                                      
        </li>
        <li>Directories<ul>
        <li <% if @selected == "students" %> class="on" <% end %>><%= link_to_if((right = "manage_directories"), "Students", url(:students)) %></li>
          </ul>
        </li>
      </ul>
    </div><!-- Sidebar Ends -->
    <div id="content-wrap"><!--Wraps The content Area-->
      <div class="hrule clear hidden "><hr /></div>
      <div id="content"><!--Content Area Starts here-->
        <%= catch_content :for_layout %>
      </div><!--Content End-->
    </div><!--Content Wrap End -->
    
<%= partial 'common/change' %>
    
    <!--Right Sidebar to be inserted here-->    
  <div class="hrule clear hidden "><hr /></div>
  </div><!--Pagewrap End -->
  <%= partial 'common/footer' %>
</body>
</html>