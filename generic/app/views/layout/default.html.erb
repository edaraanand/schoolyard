<%= partial 'layout/main' %>

    <div id="sidebar">
      <ul id="menu"><!-- Nested Lists -->
        <li>Site Settings<ul>
          <li><%= link_to "Basic Settings", url(:schools) %></li>
          <li><%= link_to_if((right = "classes"), "Classrooms", url(:classrooms) )  %></li>
          </ul>
        </li>
        <li>Access Rights<ul>
            <li><%= link_to_if((right = "rights_others"), "Add/Edit Access Rights", url(:people) ) %></li>
              <% @parents = @current_school.parents.find(:all, :conditions => ["approved = ?", 2 ]) %>
              <li class="count"><%= link_to_if((right = "parent_registration"), "Parent Registration", url(:parent_approvals) ) %><span><b><%= @parents.length %></b></span></li>
          </ul>
        </li>
        <% @announcements = @current_school.announcements.find(:all, :conditions => ["approve_announcement = ? and approved = ?", true, false ]) %>
        <li>Content<ul>
          <li class="count"><%= link_to_if((right = "approve_announcement"), "Pending Approvals", url(:approvals) ) %><span><b><%= @announcements.length %></b></span></li>
        <li><%= link_to_if((right = "from_principal"), "From the Principal", url(:from_principals)) %></li>
      		<li><%= link_to_if((right = "announcements"), "Announcements", url(:announcements)) %></li>
      		<li><%= link_to_if( (right = "welcome_messages"), "Welcome Messages", url(:welcome_messages) ) %></li>
      	  <li><%= link_to_if((right = "calendar"), "Calendars", url(:calendars) )  %></li>
      		<li><%#= link_to_if((right = "spotlight"), "Spotlight", url(:spot_lights) ) %></li>
          <li><%= link_to_if((right = "homework"), "Homework", url(:home_works) )  %></li>
      		<li><%#= link_to_if((right = "grades"), "Grades/Reports" ) %></li>
      		<li><%= link_to_if((right = "external_links"), "External Links", url(:external_links) ) %></li>
      		<li><%= link_to_if((right = "teams"), "Sports Teams", url(:teams)) %></li>
      		<li><%= link_to_if((right = "forms"), "Forms", url(:forms)  ) %></li>
      		<li><%#= link_to "Advertising" %></li>
          </ul>                                                                                                      
        </li>
        <li>Directories<ul>
          <li><%= link_to_if((right = "manage_directories"), "Students", url(:students)) %></li>
          </ul>
        </li>
      </ul>
    </div><!-- Sidebar Ends -->
    <div id="content-wrap"><!--Wraps The content Area-->
      <div class="hrule clear hidden "><hr /></div>
      <div id="content"><!--Content Area Starts here-->
        <%= catch_content :for_layout %>
      </div><!--Content End-->
    </div><!--Content Wrap End -->
    
         <% @classrooms = @current_school.classrooms.find(:all) %>
    <div id="info" style="display:none;">
         <h3>Please Select the classroom you would like to visit</h3>
          <p>Classes: </p><ul> 
           <% @classrooms.each do |f| %>
                  <li><%= link_to "#{f.class_name}", url(:class_details, :id => "#{f.id}" ) %></li>
           <% end %>
        </ul>
    </div> 
    
    <!--Right Sidebar to be inserted here-->    
  <div class="hrule clear hidden "><hr /></div>
  </div><!--Pagewrap End -->
  <%= partial 'common/footer' %>
</body>
</html>