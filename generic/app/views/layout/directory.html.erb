  <div>&nbsp;</div>
  <div id="classContainer">      
        <div id="sidebar">
           
             <% if params[:label] == "forms" %>  
                      <ul id="menu">
                           <li <% if @selected == "all_forms" %> class="on" <% end %> >
	                           <%= link_to "All Downloadable Forms", url(:form_files, :l => "all_forms", :label => "forms") %>
	                       </li>
	                       <%= partial 'layout/capture' %>
                      </ul>
             <% elsif params[:label] == "calendars" %>
                      <ul id="menu">
                          <li <% if @selected == "all_events" %> class="on" <% end %> >
	                            <%= link_to "All Events", url(:events, :l => "all_events", :label => "calendars") %></li>
                          <% @classes.each do |f| %>
                             <li <% if @selected == "#{f.class_name}" %> class="on" <% end %>>
	                            <%= link_to "#{f.class_name}".titleize, url(:events, :id => "#{f.id}", :label => "calendars") %>
	                         </li>
                          <% end %>
                          <% @extracurricular.each do |f| %>
                             <li <% if @selected == "#{f.class_name}" %> class="on" <% end %>>
	                            <%= link_to "#{f.class_name}".titleize, url(:events, :id => "#{f.id}", :label => "calendars") %>
	                         </li>
                          <% end %>
                      </ul>
             <% else %>
                    <ul id="menu"><!-- Nested Lists -->
                         <li <% if @selected == "current_students" %> class="on" <% end %> ><%= link_to "Students", url(:directory) %></li>
                         <li <% if @selected == "school_staff" %> class="on" <% end %> ><%= link_to "School Staff", url(:staff) %></li>
                    </ul>
             <% end %>  
      </div><!-- Sidebar Ends -->
      
      <div id="content-wrap"><!--Wraps The content Area-->
           <div id="content"><!--Content Area Starts here-->
