<%= partial 'layout/main' %>
    <div id="sidebar">
          
          <table cellpadding="0" cellspacing="0" order="0" class="class-name">
            <tr><td class="class-name-top"><img src="/images/class-name-top.gif"/></td></tr>
            <tr><td class="class-name-backgr"><p><%= @classroom.class_name %></p></td></tr>
            <tr><td  class="class-name-bottom"><img src="/images/class-name-bottom.gif"/></td></tr>
          </table>
          
          
      <ul id="menu"><!-- Nested Lists -->
        <li <% if @selected == nil %> class="on" <% end %>><%= link_to "<span>Home</span>", url(:class_details, :id =>  @classroom.id) %></li>
        <li <% if @selected == "calendars" %> class="on" <% end %> ><%= link_to "Class Calendar", url(:class_details, :id =>  @classroom.id, :label => "calendars") %></li>
        <li <% if @selected == "homeworks" %> class="on" <% end %>><%= link_to "Homework Corner", url(:class_details, :id =>  @classroom.id, :label => "homeworks") %></li>
        <li <% if @selected == "announcements" %> class="on" <% end %>><%= link_to "Announcements", url(:class_details, :id =>  @classroom.id, :label => "announcements") %></li>
        <li>&nbsp;</li>
        <li class="change"><a rel="facebox" href="#info"> Change Classroom</a></li>
      </ul>
        <% @classrooms = @current_school.classrooms.find(:all, :conditions => ['class_name != ? and activate = ?', "Sports", true]) %>
      <ul id="menu1">
        <% s = @classroom.class_peoples.delete_if{ |x| x.team_id != nil } %>
              <% t = s.delete_if{ |x| x.role != "class_teacher" } %>
                 <% t.each do |f| %>
                     <li>
                        <table cellpadding="0" cellspacing="0" order="0" class="teach-name">
                          <tr><td class="teach-name-top"><img src="/images/teach-name-top.gif"/></td></tr>
                          <tr><td class="teach-name-backgr"><p><%= f.role.titleize %></p></td></tr>
                          <tr><td  class="teach-name-bottom"><img src="/images/teach-name-bottom.gif"/></td></tr>
                        </table>
                        
                     </li>
                     <li><b><%= f.person.name %></b>
                            <% unless f.person.person_bio.blank? %>
                                | <span <% if @selected == "bio_classes" %> class="on" <% end %> > <%= link_to "Bio", url(:bio, :id => @classroom.id, :label => "classes") %> 
                                </span>
                            <% end %>
                     </li>
                     <li><%= email(f.person.email) %></li>
                 <% end %>
         </ul>
    </div><!-- Sidebar Ends -->
    
    <div id="content-wrap"><!--Wraps The content Area-->
      
        <%= catch_content :for_layout %>
      
    </div><!--Content Wrap End -->  

<%= partial 'common/change' %>
    
    
    
    <!--Right Sidebar to be inserted here-->    
  <div class="hrule clear hidden "><hr /></div>
  </div><!--Pagewrap End -->
  <%= partial 'common/footer' %>
</body>
</html>
