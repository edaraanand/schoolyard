<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-us" lang="en-us">
  <head>
  <% unless @current_school.nil? %>
      <title><%= @current_school.school_name %>, <%= @current_school.email %>, <%= number_to_phone(@current_school.phone, :area_code => true) %> </title>
  <% end %>
  
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <link rel="stylesheet" href="/stylesheets/global.css" type="text/css" media="screen" charset="utf-8" />
    <link rel="stylesheet" href="/stylesheets/ui.datepicker.css" type="text/css" media="screen" charset="utf-8" />
    <link rel="stylesheet" href="/stylesheets/clockpick.1.2.4.css" type="text/css" media="screen" charset="utf-8" />
    <link rel="stylesheet" href="/stylesheets/rte.css" type="text/css" media="screen" charset="utf-8" />
    
    
    <script src='/javascripts/prototype.js'></script>
    <script src='/javascripts/jquery.js'></script>
    <script src='/javascripts/ui-datepicker-1.5.2.min.js'></script>
    <script src='/javascripts/jquery.clockpick.1.2.4.js'></script>
    <script src='/javascripts/jquery.rte.js'></script>
    <script>  jQuery.noConflict(); </script>
    <script>  var $j = jQuery; </script>
        <%= include_required_js %>               
   
  </head>
<body>
<div style="height:10px; background:#333;"></div>
  <div id="page-wrap"><!-- Wraps everything -->
    <div id="header"><!--The Header -->
      <% unless @current_school.nil? %>
        <h1 class="login"><%= @current_school.school_name %></h1>
      <% end %>
    </div><!--Header End -->
    <div style="margin:0 auto;"><%= catch_content :for_layout %></div>
  <%= partial 'common/footer' %>
</body>
</html>                                  
