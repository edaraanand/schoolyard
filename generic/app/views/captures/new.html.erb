
  <%= error_messages_for @capture %>
   <ul class='error_messages'>
       <% if flash[:error] %>
          <li><%= flash[:error] %> </li>
       <% end %>
   </ul>

<h2 class="current-page">Time Capture Forms &gt; <span class="add-link">Add New</span></h2>



<%= form_for(@capture, :id => "capture", :action => resource(:captures) ) do %>

     <fieldset  class="capture-edit">
	
		     <ul>
		         <li><%= text_field :title,  :label => "Title", :maxlength => "75", :class => "required"  %></li>
		         <li>
			        <label>Tasks <br/>
				        <span class="subText">	Please add one task per line below: </span>					
				    </label>
		            <%= text_area  :content,  :rows => "20", :cols => "50" %>
		        </li>
		        <li><%= text_field  :expiration, :class => "required short date", :label => "Expiration", :size => "12" %></li>
		        <li>
				      <label>&nbsp;</label>
				      <input type="checkbox" id="capture_school_staff" value="1" name="capture[school_staff]" class="checkbox"/> 
				      Only school staff can use this form
			    </li>
		     </ul>
                
		     <div class="save-cancel">
		         <%= submit "    Save    " %> Or <%= link_to "Cancel", resource(:captures), :class => "cancel" %>
		     </div>
	
     </fieldset>  

<% end =%>


<script type= "text/javascript">


  $j(document).ready(function() { $j("input.date").datepicker({minDate:'today + 1'});  });



</script>



