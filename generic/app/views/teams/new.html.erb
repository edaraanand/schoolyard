<h2 class="current-page">From the Principal &gt; Add New</h2>
<%= form_for :team, :action => url(:team) do %>
  <fieldset>
    <ul>
      <li><%= text_field  :team_name,  :label => "Name of the Team" %></li>
      <li><%= select :classroom_id, :collection => @classrooms.collect{|x| x.class_name }, :label => "Classroom" %></li>
      <li><%= select :year, :collection => @years.map {|y| y.to_s}, :label => "Year" %></li>
      <li>
        <label>Coach:</label>
        <select name = "classroom[people][ids][]" id="classroom_person",>
          <% @teachers.each do |teacher| %>
            <option value="<%= teacher.id %>">
              <%= teacher.first_name %>
            </option>
  			  <% end %>
  		</li>
  		<li><a href="#" onclick="add();return false;" class="add-more">Add More</a></li>
    </ul>
  </fieldset>
  
  <div class="save-cancel">
    <%= submit "Save" %>  Or <%= link_to "Cancel", url(:teams) %>
  </div>
<% end =%>


<script type= "text/javascript">
 
  function add()
   {
      var table = document.getElementById('teams');
	var tr = document.createElement('tr');
        var td1 = document.createElement('td');
	var td2 = document.createElement('td');
	td1.innerHTML = "<input type='text' name='classroom[people][role][]' id='classroom_class_people' />";
	td2.innerHTML = <select name="classroom[people][ids][]" id="classroom_person"> 
	                                <% @teachers.each do |teacher| %>
		                           <option value="<%= teacher.id %>">
					   <%= teacher.first_name %>
					   </option>
			                <% end %>
			      </select>
	 tr.appendChild(td1);
	 tr.appendChild(td2);
	 table.appendChild(tr);
    }
     
</script>
