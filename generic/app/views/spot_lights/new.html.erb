  <%= error_messages_for @spot_light %>
  <ul class='error_messages'><li class="empty-li"></li>
       <% if flash[:error] %>
          <li><%= flash[:error] %> </li>
       <% end %>
       <% if flash[:error1] %>
          <li><%= flash[:error1] %> </li>
       <% end %>
   </ul>
 
 <h2 class="current-page">Spotlight &gt; Add New</h2>
 
 <%= form_for(@spot_light, :action => resource(:spot_lights) ) do %>
    <fieldset>
         <ul>
            <li><label>Spotlight for:</label><%= select :class_name, :collection => @classrooms, :prompt => "Please Select" %></li>
            <li><label>Student </label><%= select :student_name, :collection => @students.collect{|x| x.name }, :prompt => "Please Select" %></li>
            <li><%= file_field :image, :label => "Upload Picture (optional)" %></li>
            <li><%= text_area  :content,  :label => "Content", :rows => "10", :cols => "50" %></li>

         </ul>
    </fieldset>
 
            <div class="save-cancel">
               <input type = 'button' value = '    Preview    ' onclick="preview();return false;" />
               <%= submit "    Publish    " %> Or 
               <%= link_to "Cancel", resource(:spot_lights), :class => "cancel" %>
           </div>
 
<% end =%>

<script type= "text/javascript">

 function preview()
 {
   var s = $('spot_light').serialize();
   window.open('/spot_lights/preview/-/?' + s);
 }
  

</script>                                                                                                    
