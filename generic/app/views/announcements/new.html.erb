<%= error_messages_for @announcement %>
<ul class='error_messages'>
     <% if flash[:error] %>
        <li><%= flash[:error] %> </li>
     <% end %>
</ul>
 

<h2 class="current-page">Announcements &gt; Add New </h2>
<%= form_for (@announcement, :action => resource(:announcements), :id => 'announcement', :name => "announce") do %>
     <fieldset>
           <ul>
               <li>
                   <label>Announcement for:</label>
                   <% if params[:l] %>
                       <%= select :access_name, :collection => rooms, :prompt => "Please Select", :selected => "#{params[:l]}" %>
                   <% else %>
                       <%= select :access_name, :collection => rooms, :selected => "#{@c}", :prompt => "Please Select"  %>
                   <% end %>
               </li>
               <li><%= text_field  :title,  :label => "Title", :maxlength => "75" %></li>
               <li><%= text_area  :content,  :label => "Description", :rows => "20", :cols => "50" %></li>
               <li><%= text_field  :expiration, :class => "short date", :label => "Expiration", :size => "12" %></li>
               <li><%= file_field :attachment,  :label => "Attach a File" %></li>
           </ul>
           
           <ul id="pending_files"></ul>
           <script type="text/javascript">
               var multi_selector = new MultiSelector($('pending_files'), 1);
               multi_selector.addElement($('announcement_attachment'));
           </script>
     </fieldset>
      
          <div class="save-cancel">
	            <input type = 'button' value = ' Preview ' onclick="preview();return false;" />
	            <%= submit " Submit for Approval " %> Or <%= link_to "Cancel", resource(:announcements), :class => "cancel" %>
          </div>        
<% end =%>



<script type= "text/javascript">

  document.announce.announcement_title.focus();
  
   function preview()
 {
    var name = document.getElementById('announcement_access_name');
   
   // var s =    dropdown.options[dropdown.selectedIndex].value;

     if (name.value == "")
       {
          alert("Please select the Classroom/Homepage from the dropdown menu");
       }
    else
       {
          var s = $('announcement').serialize();
         // var t = window.open('/announcements/preview/-/?' + s );
	      window.open('/announcements/preview/-/?' + s, 'mywin', 'left=20,top=20,width=1000,height=500,toolbar=1,resizable=0');
       }
     
 }
  
  $j(document).ready(function() {
        $j("input.date").datepicker({minDate:'today + 1'});

  });


</script>
