<h2 class="current-page">Announcements: <%= link_to "Add New", resource(:announcements, :new) %></h2>
<div class="fullpage announcemt">
  <%= form_for(@announcement, :action => url(:controller => 'announcements', :action => 'index'), :id => 'announcement') do %>
    <span class="select-announce"><%= select :name => "access_name", :collection => classrooms %><%= submit ">>" %></span>
  <% end =%>

  <% for announcement in @announcements %>
    <div class="data-block long-block">
      <span class="hidden">
      <% unless announcement.expiration.nil? %>
        <%= announcement.expiration.strftime("%B-%d") %>
      <% end %>
      </span>
      <div class="ddmmm">
        <span class="date">24</span>
        <span class="month">Oct</span>
      </div>
      <h3><%= announcement.title %></h3>
      <p class="post-content"><%= announcement.content %></p>
      <%= link_to "Edit", resource(announcement, :edit), :class=>"edit-btn" %>
      <%= link_to "Delete", resource(announcement, :delete), :class=>"delete-btn"  %>
      <div class="hrule clear"><hr /></div>
    </div>
  <% end %>
</div>
 
