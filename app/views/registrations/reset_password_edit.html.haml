%h2{:class => "current-page"}
%ul{:class => "error_messages"}
  - if flash[:error]
    = flash[:error]
- if flash[:error]
  %p{:class => "cancel"}
    Password should be at least Eight characters long
- else
  %p{:class => "approved"}
    Password should be at least Eight characters long
= form_for :person, :action => url(:reset_password_update, :id => @person.password_reset_key)  do 
  %fieldset
    %ul
      %li
        = password_field :password,  :label => "Password"
      %li
        = password_field :password_confirmation,  :label => "Password Confirmation"
  %div{:class => "save-cancel"}
    = submit "    Save    "
