%h2{:class => "current-page"} 
  From the Principal
  %span{:class => "actions"}
    = link_to "Add New", resource(:from_principals, :new)
  %br
%div
  = link_to "Edit", url(:edit_from_principal, @announcement.id), :class=>"edit-btn"
  = link_to "Delete", url(:delete_from_principal, @announcement.id), :class=>"delete-btn"
  %br
  %br
  %div{:class => "data-block long-block"}
    %div{:class => "ddmmm"}
      %span{:class => "date"}
        = @announcement.expiration.strftime("%d")
      %span{:class => "month"}
        = @announcement.expiration.strftime("%b")
    %h3
      = @announcement.title
    %p
      = san_content(@announcement.content)
    - if @attachment
      %span{:class => "attachement"} 
        = link_to "#{@attachment.filename}", url(:download, :id => @attachment.id)
    %p{:class => 'separator'} &nbsp;
    = link_to '&larr; Previous', url(:from_principal, @announcement.previous_id),:class => "alignleft" if @announcement.previous_id
    &#124;
    = link_to "Back to All Principalâ€™s Articles ", url(:from_principals)
    &#124;
    = link_to 'Next &rarr;',  url(:from_principal, @announcement.next_id),:class => "alignright" if @announcement.next_id
    %p{:class => 'separator'} &nbsp;
