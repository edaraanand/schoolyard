<div>
  <h2 class="current-page">School Staff > <%= @staff.name %>
       &nbsp;&nbsp;&nbsp;
       <%= link_to "Add New", resource(:people, :new)  %> | 
       <%= link_to "Edit", url(:edit_person, @staff)  %>
  </h2>
      
       <% if params[:label] == "staff" %>
           <%= link_to "&larr; Back to School Staff List", url(:staff) %>
       <% else %>
            <%= link_to "&larr; Back to School Staff List", url(:people) %>
       <% end %>

       <h3 class="name"><%= @staff.name %></h3>
       <table cellpadding="8" cellspacing="0" border="0">
           <tr><td>Email
           </td><td>
             <%= email(@staff.email) %>
           </td></tr>
            
           <tr><td class="separator">Contact Number
           </td><td class="separator">
              <%= @staff.phone ? number_to_phone(@staff.phone, :area_code => true)  : "<span class='noText'>not specified</span>"%>
           </td></tr>
             <% unless @staff.person_bio.nil? %>
                <tr><td colspan="2"><%= san_content(@staff.person_bio) %></td></tr>
                <% end %>
           </table>

   <br/>
       <div class="clear"><hr size="1" /></div>
  </div>

