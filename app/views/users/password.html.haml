%ul{:class => "error_messages"}
  - if flash[:error]
    %li
      = flash[:error]

%h2{:class => "current-page"}
  My Profile > Change Password 
= form_for :person, :action => url(:change_password, :selected => @selected), :id => @person  do 
  %fieldset
    %ul
      %li
        = password_field :old_password,  :label => "Current Password" 
      %li
        = password_field :password,  :label => "New Password"
      %li
        = password_field :password_confirmation,  :label => "Re-type New Password"
    
  %div{:class => "save-cancel"}
    = submit "    Save    "
    Or
    - if @person.type == "Staff"
      = link_to "Cancel", resource(:users, :selected => "staff_profile"), :class => "cancel"
    - else
      = link_to "Cancel", resource(:users, :selected => "parent_profile"), :class => "cancel"
